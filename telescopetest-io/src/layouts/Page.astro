---
import Layout from './Layout.astro';
import TopNav from '@/components/TopNav.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <TopNav />
  <section class="page-content">
    <slot />
  </section>
</Layout>

<style>
  .page-content {
    max-width: 87.5rem; /* 1400px */
    margin: 0 auto;
    padding: 1.5rem; /* 24px */
  }
</style>
