---
export interface Props {
  testId: string;
  url: string;
  testDate: number;
  browser: string;
  name: string | null;
  description: string | null;
  screenshotUrl: string | null;
}

const { testId, url, testDate, browser, name, description, screenshotUrl } =
  Astro.props;

const date = new Date(testDate * 1000);
const formattedDate = date.toLocaleString('en-US', {
  month: 'short',
  day: 'numeric',
  year: 'numeric',
  hour: '2-digit',
  minute: '2-digit',
  timeZoneName: 'short',
});

const nonamePlaceholder = 'No Name';
---

<a href={`/results/${testId}`} class="card">
  <div class="screenshot">
    {
      screenshotUrl ? (
        <img
          src={screenshotUrl}
          alt={`Screenshot of ${url}`}
          loading="lazy"
          decoding="async"
        />
      ) : (
        <p>Screenshot not found.</p>
      )
    }
  </div>
  <div class="content">
    <h3 class="name">{name || nonamePlaceholder}</h3>
    <p class="description">{description || '\u00A0'}</p>
    <p class="browser">Browser: {browser}</p>
    <p class="url">{url}</p>
    <p class="date">{formattedDate}</p>
  </div>
</a>

<style>
  .card {
    display: flex;
    flex-direction: column;
    background: var(--panel);
    border: 1px solid var(--border);
    border-radius: 0.75rem; /* 12px */
    overflow: hidden;
    transition: all 0.2s;
    text-decoration: none;
    color: var(--text);

    &:hover {
      transform: translateY(-0.125rem); /* -2px */
      box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1); /* 8px 16px */
      border-color: var(--brand-hover);
    }

    @media (max-width: 48rem) { /* 768px */
      flex-direction: column;
    }
  }

  :global(.results-container[data-layout='vertical']) .card {
    flex-direction: row;
  }

  .screenshot {
    width: 100%;
    aspect-ratio: 16 / 10;
    background: var(--background);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    color: var(--muted);
    font-size: 0.875rem; /* 14px */

    & img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    @media (max-width: 48rem) { /* 768px */
      width: 100%;
      aspect-ratio: 16 / 10;
    }
  }

  :global(.results-container[data-layout='vertical']) .screenshot {
    width: 15rem; /* 240px */
    min-width: 15rem; /* 240px */
    aspect-ratio: auto;
  }

  .content {
    padding: 1rem; /* 16px */
    display: flex;
    flex-direction: column;
    gap: 0.5rem; /* 8px */
    flex: 1;
    min-width: 0;
  }

  .name {
    max-height: 1.125rem; /* 18px */
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .description {
    font-size: 0.875rem; /* 14px */
    color: var(--muted);
    margin: 0;
    max-height: 0.875rem; /* 14px */
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .browser {
    font-size: 0.8125rem; /* 13px */
    color: var(--muted);
    margin: 0;
  }

  .url {
    font-size: 0.8125rem; /* 13px */
    color: var(--muted);
    margin: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .date {
    font-size: 0.75rem; /* 12px */
    color: var(--muted);
    margin: 0;
    margin-top: auto;
  }
</style>
